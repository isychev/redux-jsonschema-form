{
  "parser": "babel-eslint",
  "plugins": [
    "prettier",
    "jest"
  ],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "settings":{
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  },
  "globals": {
    "URLSearchParams":true,
    "window": true,
    "location": true,
    "document": true,
    "navigator": true
  },
  "env": {
    "jest/globals": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/label-has-for": [ 2, {
      "allowChildren": true
    }],
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }],
    "jest/no-disabled-tests": "error",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/valid-expect": "error"
  }
}
